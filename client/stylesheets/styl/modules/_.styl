.header
    padding 3rem 3rem 2rem
    img
        margin-bottom .5rem

#dropform
    padding 0 3rem
    display flex
    flex-grow 1
    section.holder
        width 100%
        display flex
        flex-grow 1
        flex-direction column
        justify-content space-between
    .action-section
        width 100%
        &.droparea
            flex-grow 1
            display flex
            .droparea-body
                align-self center
        &.files
            flex-grow 1
            display flex
            .files-body
                align-self center
                width 100%
            h2
                margin-bottom .5rem
        h2
            color primary-color
            font-weight 500
        h5
            color text-light
        small
            color lighten(secondary-color, 30%)
        h6, p, small
            line-height 1.6em
        & + .action-section
            margin-top 1rem
    .file
        width 100%
        padding 1rem 1.4rem
        border-bottom 1px solid border-grey
        background-color #f9fafc
        // & + .file
            // margin-top 1rem
        .name
            display block
            font-weight 500
        .size
            display block
            color text-light
        &:last-of-type
            border-bottom 0

footer
    padding 1.4rem 3rem 1.6rem
    width 100%
    text-align center

    small
        margin-top .3rem
        display block
        color text-light
        line-height 1.4em
