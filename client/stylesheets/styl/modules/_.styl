.header
    padding 3rem 3rem 2rem
    img
        margin-bottom .5rem

#dropform
    padding 0 3rem
    display flex
    flex-grow 1
    section.holder
        width 100%
        display flex
        flex-grow 1
        flex-direction column
        justify-content space-between
    .action-section
        width 100%
        &.droparea
            flex-grow 1
            display flex
            .droparea-body
                align-self center
        &.files
            flex-grow 1
            display flex
            flex-direction column
            overflow-x hidden
            overflow-y auto
            &::-webkit-scrollbar
                display none
            input
                width 100%
            .load-more
                display block
                text-align center
                margin-top .8rem
                small
                    color text-light
            .files-body
                align-self center
                width 100%
                & + .files-body
                    margin-top 2rem
            h2
                margin-bottom .5rem
            h4
                margin-bottom .8rem
        h2
            color primary-color
            font-weight 500
        h4
            color primary-color
            font-weight 500
        h5
            color text-light
        small
            color lighten(secondary-color, 30%)
        h6, p, small
            line-height 1.6em
        & + .action-section
            margin-top 1rem
    .filelist
        .file
            width 100%
            padding .9rem 1.2rem
            border-bottom 2px solid #fff
            background-color #f9fafc
            display flex
            justify-content space-between
            .name
                display block
                font-weight 500
            .size
                display block
                color text-light
            .status
                display flex
                align-items center
                .circle
                    width 2rem
                    height 2rem
                    border-radius 50%
                    display flex
                    justify-content center
                    align-items center
                    background-color color-success
                    .discard
                        display none
                    .success
                        display block
                    svg
                        stroke #fff
                        width 1rem
                        height 1rem
            &:last-of-type
                border-bottom 0
            &:hover
                .circle
                    background-color color-red !important
                    cursor pointer
                    .discard
                        display block
                    .success
                        display none
footer
    padding 1.4rem 3rem 1.6rem
    width 100%
    text-align center

    small
        margin-top .3rem
        display block
        color text-light
        line-height 1.4em

.share-types
    display flex
    width 100%
    & > a
        display flex
        color text-light
        text-align center
        font-weight 500
        position relative
        & + a
            margin-left 2rem
        .circle
            width 1rem
            height 1rem
            border-radius 50%
            display inline-block
            margin-right .7rem
            border 2px solid border-grey
        &:hover
            color text-light
            border-color text-light
        &.active
            .circle
                border-color color-primary
                background-color color-primary
                box-shadow inset 0 0 0 3px #fff
            color color-primary
.share-type
    margin-top 2rem
    .input + .input
        margin-top 2.3rem
